-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do 
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", "1", params[:ratings] ? params[:ratings].include?(rating) : false
  = hidden_field_tag(:sort,@sort)
  = submit_tag "Refresh", :id =>"ratings_form"



%table#movies
  %thead
    %tr
 
      %th{params[:sort] == "title" ? {:class => "hilite"} : {}}= link_to "Movie Title", movies_path(:sort => "title", :ratings => params[:ratings]), :id => "title_header"

      %th Rating
      
      %th{params[:sort] == "release_date" ? {:class => "hilite"} : {}}= link_to "Release Date", movies_path(:sort => "release_date", :ratings => params[:ratings]), :id => "release_date_header"

      %th More Info
  %tbody
    - @movies.each do |movie|   # this is like a for loop(goes throu each movie that is in database array)
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path

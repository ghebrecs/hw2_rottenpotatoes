-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:id => "title_header", :class =>("title" == params[:sort]) ? "hilite" : nil}= link_to('Movie Title',{:action => "index", :sort => 'title'})
      %th Rating
      %th{:id => "title_header", :class =>("release_date" == params[:sort]) ? "hilite" : nil}= link_to('Release Date',{:action => "index", :sort => 'release_date'})
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
